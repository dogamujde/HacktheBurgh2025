    "code": "CMSE11229",
    "name": "Leading Strategic Change (EMBA)",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11229.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "10",
    "subject": "Common Courses (Management School)",
