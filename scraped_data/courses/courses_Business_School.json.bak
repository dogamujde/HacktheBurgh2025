  {
    "code": "CMSE11426",
    "name": "Simulation Modelling and Analysis",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11426.htm",
    "availability": "SS1",
    "period": "Semester 2",
    "credits": "10",
    "subject": "Common Courses (Management School)",
    "school_name": "Business School",
