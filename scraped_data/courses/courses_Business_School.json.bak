  {
    "code": "DESI11105",
    "name": "Data Value Chains to Constellations",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxdesi11105.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "10",
    "subject": "Business Studies",
