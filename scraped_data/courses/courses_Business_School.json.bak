  {
    "code": "CMSE11586",
    "name": "Sustainability in the Boardroom (MBA)",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11586.htm",
    "availability": "SS1",
    "period": "Flexible",
