    "code": "BUST10159",
    "name": "The Strategy of Digital Transformation",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxbust10159.htm",
    "availability": "SV1",
    "period": "Semester 1",
    "credits": "20",
