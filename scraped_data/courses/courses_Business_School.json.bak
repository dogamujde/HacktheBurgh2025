    "code": "BUST11235",
    "name": "Organising for Social Change - Executive Education",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxbust11235.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "10",
    "subject": "Business Studies",
