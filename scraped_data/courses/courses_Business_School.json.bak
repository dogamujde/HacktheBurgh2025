    "code": "CMSE11569",
    "name": "Emerging Market MNCs: Internationalisation and HRM",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11569.htm",
    "availability": "SS1",
    "period": "Semester 2",
    "credits": "10",
    "subject": "Common Courses (Management School)",
