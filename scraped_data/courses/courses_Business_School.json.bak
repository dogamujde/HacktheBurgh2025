  {
    "code": "CMSE11564",
    "name": "Strategies for Internationalisation",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11564.htm",
    "availability": "SS1",
    "period": "Block 3 (Sem 2)",
    "credits": "10",
    "subject": "Common Courses (Management School)",
    "school_name": "Business School",
