  {
    "code": "CMSE11660",
    "name": "Marketing Communications and Branding",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11660.htm",
    "availability": "SS1",
    "period": "Flexible",
    "credits": "10",
    "subject": "Common Courses (Management School)",
