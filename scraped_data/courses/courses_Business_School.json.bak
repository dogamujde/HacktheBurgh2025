  {
    "code": "BUST10049",
    "name": "Management Honours Dissertation",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxbust10049.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "40",
    "subject": "Business Studies",
