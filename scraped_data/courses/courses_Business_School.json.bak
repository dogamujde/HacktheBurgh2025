    "code": "ACCN10030",
    "name": "Management accounting and control systems: A strategic and organisational perspective",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxaccn10030.htm",
    "availability": "SV1",
    "period": "Semester 2",
    "credits": "20",
