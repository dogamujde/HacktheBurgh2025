  {
    "code": "CMSE11580",
    "name": "Venture Capital and Private Equity",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11580.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "10",
    "subject": "Common Courses (Management School)",
    "school_name": "Business School",
