    "code": "CMSE11584",
    "name": "Political Economy of Financial Technology",
    "url": "http://www.drps.ed.ac.uk/24-25/dpt/cxcmse11584.htm",
    "availability": "",
    "period": "Not delivered this year",
    "credits": "10",
